#!/usr/bin/env bash
set -e -o pipefail

cd "$(dirname "$0")"

default_cmd="./run_generate"

run_args=(-it --rm
    --gpus=all
    --ipc=host --ulimit memlock=-1 --ulimit stack=67108864
    -v $PWD:/workdir
    -e sz -e cfg -e ckpt
    vortex
    ${@:-$default_cmd}
)

docker build -t vortex .
docker run "${run_args[@]}"
